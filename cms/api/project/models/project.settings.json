{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "preview": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "published": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "description": {
      "type": "richtext",
      "maxLength": 600
    },
    "main_media": {
      "type": "dynamiczone",
      "components": [
        "projects.video",
        "projects.image"
      ],
      "required": false,
      "max": 1
    }
  }
}
